{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fa-solid fa-folder"></i> Gestion des catégories</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-primary">
            <i class="fa-solid fa-circle-plus"></i> Créer une catégorie
        </a>
    </div>

    {% if categories|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Description</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td><strong>{{ category.name }}</strong></td>
                    <td><code>{{ category.slug }}</code></td>
                    <td>{{ category.description|u.truncate(50, '...') }}</td>
                    <td>{{ category.createdAt ? category.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ category.updatedAt ? category.updatedAt|date('d/m/Y H:i') : '' }}</td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info"
                                title="Voir">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}"
                                class="btn btn-sm btn-warning" title="Modifier">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="alert alert-info" role="alert">
        <i class="fa-solid fa-circle-info"></i> Aucune catégorie trouvée.
        <a href="{{ path('app_category_new') }}" class="alert-link">Créez-en une maintenant</a>.
    </div>
    {% endif %}
</div>
{% endblock %}