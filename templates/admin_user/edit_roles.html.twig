{% extends 'base.html.twig' %}

{% block title %}Modifier les rôles - {{ user.email }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Modifier les rôles</h3>
                    <p class="mb-0 mt-2">Utilisateur : <strong>{{ user.email }}</strong></p>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.roles) }}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <strong>Information :</strong>
                <ul class="mb-0 mt-2">
                    <li><strong>ROLE_USER</strong> : Rôle par défaut pour tous les utilisateurs</li>
                    <li><strong>ROLE_ADMIN</strong> : Accès à l'administration</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
