{% extends 'base.html.twig' %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
		<h1>Liste des articles</h1>

		<ul>
				{% for post in posts %}
						<li>
								<a href="{{ path('actu.show', { 'id': post.id }) }}">{{ post.title }}</a>
								- {{ post.createdAt|date('d/m/Y') }}
						</li>
				{% else %}
						<li>Aucun article publi√© pour le moment.</li>
				{% endfor %}
		</ul>
{% endblock %}
